.b-header
  width auto
  background-color #f2f2f2
  height 90px
  position relative
    
  @media (max-width: 767px)
    height 80px
  
  .col-sm-3,
  .col-sm-4,
  .col-sm-5,
  .col-sm-6
    line-height 90px
    
    @media (max-width: 767px)
      line-height 80px
      
  &-fixed
    position fixed
    width 100%
    z-index 996
    background-color rgba( 242, 242, 242, 0.85 )
  
  &__menu
    width 24px
    height 24px
    background-repeat no-repeat
    background-position center center
    background-size contain
    display inline-block
    vertical-align middle
    line-height 90px
    margin-right 55px
    cursor pointer
    
    @media (max-width: 1199px) and (min-width: 992px)
      margin-right 30px
    
    @media (max-width: 991px) and (min-width: 768px)
      margin-right 22px
      
    @media (max-width: 767px)
      position absolute
      top 26px
      left 18px
      line-height 80px
      margin-right 0
  
  &__search
    width 24px
    height 24px
    background-repeat no-repeat
    background-position center center
    background-size contain
    display inline-block
    vertical-align middle
    line-height 90px
    margin-right 23px
    
    @media (max-width: 1199px)
      margin-right 12px
    
    @media (max-width: 991px) and (min-width: 768px)
      margin-right 16px
  
  &__logo
    display inline-block
    vertical-align top
    line-height 90px
    
    img.hidden-xs
      width 219px
      height 70px
    
    @media (max-width: 991px) and (min-width: 768px)
      img.hidden-xs
        width 170px
        height 55px
        
    @media (max-width: 767px)
      display block
      text-align center
      line-height 80px
      width 203px
      margin-right auto
      margin-left auto
  
  &__phone
    font-size 13.5pt
    text-align center
    line-height 86px
    margin-top 4px
    color #000
    
    @media (max-width: 1199px) and (min-width: 768px)
      padding-left 0
  
  menu
    float right
    line-height 86px
    margin 4px 5px 0 0
    padding 0
    font-size 11pt
    
    li
      list-style-type none
      display inline-block
      text-transform uppercase
      margin-right 20px
      
      @media (max-width: 1199px)
        margin-right 11px
    
    @media (max-width: 1199px) and (min-width: 768px)
      
      li
        display none
        
        &:first-child,
        &:nth-child(2)
          display inline-block
      
    a,
    a:hover,
    a:focus,
    a:active
      color #000
  
  &__basket
    float right
    position relative
      
    @media (max-width: 767px)
      position absolute
      bottom 0
      right 20px
    
    &__icon
      width 24px
      height 24px
      display inline-block
      vertical-align middle
      position relative
      margin-top 1px
      background-repeat no-repeat
      background-position center center
      background-size contain
        
  .count_in_cart
    position absolute
    top -2px
    left 16px
    text-align center
    border none
    font-size 6.5pt
    color #fff
    width 18px
    height 18px
    background-color #ff0000
    border-radius 51%
    line-height 12px
    padding 4px 0 0
      
.b-header-menu
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  background rgba( 255, 255, 255, 0.98 )
  font-size 13pt
  z-index 10
  opacity 0
  visibility hidden
  transition( all 1s ease )
  line-height 1.3 !important
  
  .col-sm-4,
  .col-sm-6
    line-height 1.3 !important
  
  .i-menu-open &
    visibility visible
    overflow auto
    opacity 1
  
  &__links
    @media ( max-width 767px )
      width 278px
      margin 0 auto
  
  .b-header
    @media ( max-width 767px )
      height auto
      padding-bottom 13px
      
      &__logo
        vertical-align bottom
        
        @media (max-width: 767px)
          img
            margin 5px auto
        
      .col-sm-6
        text-align center
  
  .b-header__phone
    font-size 22pt
    text-align right
    
    span
      font-size 15pt
      color #797979
      margin-left 8px
      
    @media ( max-width 767px )
      line-height normal
      text-align center
    
      span
        display block
      
  .b-close-button
    margin-right 55px
    
    @media (max-width: 1199px) and (min-width: 992px)
      margin-right 30px
    
    @media (max-width: 991px) and (min-width: 768px)
      margin-right 22px
    
  h4
    margin 0 0 20px
    
  &__search
    text-align center
    margin 27px 0 60px
    
    .b-search-icon
      display inline-block
      vertical-align middle
      width 24px
      height 24px
      background url(/template/images/svg/search-icon.svg) no-repeat center center
      margin 2px 25px 0 0        
      
    .form-control
      width 500px
      display inline-block
    
    @media ( max-width 767px )
      
      .b-search-icon
        position absolute
        top 11px
        left -30px
        
      .form-group
        width 278px
        margin 0 auto
        position relative
        
      .form-control
        width 278px
      
  ul
    margin 0 0 48px
    padding 0
    list-style-type none
    
    @media ( max-width 767px )
      margin-bottom 25px
    
    ul
      font-size 12pt
      margin-left 26px
      margin-bottom 0
      padding-top 18px
      padding-bottom 11px
    
  li
    padding-bottom 8px
    
  &__close
    vertical-align top
    margin-top 31px
    
    @media ( max-width 767px )
      position absolute
      top 20px
      left 15px
      z-index 10
      margin 0
  
.modal-content
  border none
  border-radius 8px
  box-shadow none
  overflow hidden
  
.bx-auth-line
  display none
  
.bx-auth-service-form
  position absolute
  bottom 46px
  left 0
  width 100%
  box-sizing content-box
  margin 0 -40px
  padding-right 40px !important
  padding-left 40px !important
  
.i-cart-modal-open .modal-dialog
  margin 0
  
.modal
  opacity 0
  transition( opacity 0.5s ease )
  border-radius 8px
  
  &.in
    opacity 1

  .b-modal-container
    height 558px
    position relative
    
  .b-modal-social
    position absolute
    bottom -32px
    left 0
    width 100%
    box-sizing content-box
    padding-right 40px !important
    padding-left 40px !important
    transition( opacity 0.5s ease )
    z-index 3
    
    &.i-hidden
      opacity 0
      z-index 1
      
    &.i-visible
      opacity 1
    
  .b-modal-signin,
  .b-modal-user
    position absolute
    top 0
    left 0
    height 558px
    width 100%
    transition( opacity 0.5s ease )
    z-index 3
    
    &.i-hidden
      opacity 0
      z-index 1
      
    &.i-visible
      opacity 1
      
    .i-size-S.hidden-xs
      margin-top -6px
      
    hr.i-line.i-size-L
      margin-bottom -3px
      
    .btn-md
      margin 8px 0 -8px
      
    nav
      margin-right 0
      margin-left 0
    
  .b-modal-signin
    opacity 0
    z-index 2
    margin-top 20px
    
    .col-xs-6.text-right
      padding-left 0

  .text-danger
    font-weight 300
    font-size 14pt
    height 24px
    margin-bottom 15px

  .b-modal-social
    background-color #c6cace
    padding 30px
    margin 35px -40px 0
  
  .b-h2
    margin-bottom 8px
  
  &,
  & .col-sm-4,
  & .col-sm-6
    line-height 1.3
    
  .checkbox
    margin 0
    text-align left
    margin-left 5px
    
    label
      font-weight 100
    
  form

    a
      color #2799d4
      text-decoration underline
  
    .row
      margin-bottom 40px
    
  .b-form-buttom
    margin-bottom 35px
  
  input.form-control[ type="text" ],
  input.form-control[ type="password" ]
    box-shadow none
    height 57px
    border-radius 9px
    border 1px solid #d4d4d4
    color #000
    font-size 17pt
    padding-left 35px
    padding-right 35px
  
  .modal-dialog
    @media (min-width: 768px)
      width 583px
      
  .modal-body
    padding 30px 40px 32px
  
  .close
    width 24px
    height 24px
    background url( 'images/svg/menu_close.svg' ) no-repeat center center
    background-size contain
    position absolute
    top 28px
    right 28px
    opacity 1
    z-index 5
    
  .b-signin-button
    height 180px
      
    div
      cursor pointer
      color #2799d4
      text-decoration underline
    
  .b-signout-button
    height 180px
    
    img
      border-radius 51%
      width 102px
      height 102px
      margin-bottom 11px
      
    div
      font-weight 400
      margin-bottom 7px
      
    .b-signout-icon
      display inline-block
      width 24px
      height 24px
      background embedurl( 'img/signout.png' ) no-repeat center center
      margin 0 auto
      cursor pointer
      
  .b-user-icon
    width 102px
    height 102px
    border-radius 51%
    background embedurl( 'img/user.png' ) no-repeat center center
    display inline-block
    margin-bottom 8px
    cursor pointer
    
  nav .col-xs-3
    padding-right 7px
    padding-left 7px
    
    @media ( max-width 767px )
      font-size 10pt
  
  .b-cart-icon,
  .b-fav-icon,
  .b-order-icon,
  .b-account-icon
    width 51px
    height 51px
    border-radius 51%
    margin 0 auto 13px
    position relative
    background-size contain
    
    &:before
      content ''
      display inline-block
      width 100%
      padding-top 100%
      background-size contain
      opacity 0
    
      @media ( max-width 767px )
        position absolute
        top 0
        left 34%
        
    @media ( max-width 767px )
      width 100%
      height 0
      padding-top 100%
      
  a
    
    &:hover,
    &:active,
    &:focus
    
      .b-cart-icon,
      .b-fav-icon,
      .b-order-icon,
      .b-account-icon
      
         &:before
          opacity 1
    
  .b-cart-icon
    background url( 'images/svg/modal/bag.svg' ) no-repeat center center
    background-size contain
    
  .b-fav-icon
    background url( 'images/svg/modal/star.svg' ) no-repeat center center
    background-size contain
    
  .b-order-icon
    background url( 'images/svg/modal/orders.svg' ) no-repeat center center
    background-size contain
    
  .b-account-icon 
    background url( 'images/svg/modal/profile.svg' ) no-repeat center center
    background-size contain
    
  .b-cart-icon:before
    background url( 'images/svg/modal/bag.svg' ) no-repeat center center
    background-size contain
    
  .b-fav-icon:before
    background url( 'images/svg/modal/star.svg' ) no-repeat center center
    background-size contain
    
  .b-order-icon:before
    background url( 'images/svg/modal/orders.svg' ) no-repeat center center
    background-size contain
    
  .b-account-icon:before
    background url( 'images/svg/modal/profile.svg' ) no-repeat center center
    background-size contain
    
  nav a,
  nav span
    text-decoration none
    display block
    
  .text-large b
    font-size 22pt
    font-weight 400
      
.b-collapse-link
  display inline-block
  min-height 19px
  font-weight 400
  
  i
    display inline-block
    vertical-align middle
    width 19px
    height 19px
    background embedurl( 'img/collapse-icon.png' ) no-repeat right center
    margin-left 20px
    transition( transform 0.2s linear )
    
  &[aria-expanded="true"]
    i
      transform rotate( 180deg )
  
.b-close-button
  display inline-block
  width 24px
  height 24px
  background url( 'images/svg/menu_close.svg' ) no-repeat center center
  background-size contain
    
.b-footer
  padding 34px 0
  font-weight 300
  border-top 1px solid #f2f2f2
  
  a
    color #6e95b5
    font-size 15px
    
    &:hover
      color lighten( #6e95b5, 20% )
  
  &__phone
    @media ( max-width 767px )
      text-align center
      border-bottom 1px solid #e0e0e0
      padding-bottom 34px
      margin-bottom 38px
      
      .text-muted
        margin-top 11px
  
  .b-networks
    text-align right
      
    a
      width 35px
      height 35px
      margin-left 38px
      display inline-block
      vertical-align top
      background-size contain
        
      span
        width 35px
        height 35px
        display inline-block
        vertical-align top
        background-size contain
        opacity 0
        transition( opacity 0.5s ease )
        
      &:hover
        span
          opacity 1
          
      &:first-child
        margin-left 0 !important
      
      @media ( max-width 992px )
        margin-left 18px
      
      &.i-facebook
        background url( 'images/svg/logo_FaceBook_gray.svg' ) no-repeat center center
        span
          background url( 'images/svg/logo_FaceBook_color.svg' ) no-repeat center center
      
      &.i-instagram
        background url( 'images/svg/logo_Instagram_gray.svg' ) no-repeat center center
        span
          background url( 'images/svg/logo_Instagram_color.svg' ) no-repeat center center
      
      &.i-vkontakte
        background url( 'images/svg/logo_VK_gray.svg' ) no-repeat center center
        span
          background url( 'images/svg/logo_VK_color.svg' ) no-repeat center center
      
      &.i-youtube
        background url( 'images/svg/logo_YouTube_gray.svg' ) no-repeat center center
        span
          background url( 'images/svg/logo_YouTube_color.svg' ) no-repeat center center
        
  
    @media ( max-width 767px )
      text-align center
      
      a
        margin 0 10px
      
  nav
    display flex
    justify-content space-between
    margin-top 34px
    
    @media ( max-width 767px )
      display block
      text-align center
      line-height 24px
      
      a
        margin 0 11px
        white-space nowrap
        
.b-copyright
  font-size 8pt
  text-align right
  margin-top 25px
  color #999
  
  @media ( max-width 767px )
    text-align center
    color #aaa
    
.modal-backdrop
  z-index 994