@import '../../styl/component-include.styl'

.b-call-me-block
  background-color $c-blue-2
  text-align center
  padding 27px 0 22px
      
      
  /*&__text
    text-align left
    width 40%*/
  
  &__text,
  &__message
    font-size 14pt
    font-weight 400
    line-height 1.2
    display inline-block
    vertical-align middle
    
    /*.i-small
      font-size 9pt
      font-weight 100
      
      a
        text-decoration underline
        white-space nowrap*/
    
    @media ( max-width 767px )
      margin-bottom 15px
      display block
      width auto
      text-align center
      padding 0 20px
    
  &__message
    display none
    
  .form-control
    display inline-block
    vertical-align middle
    width 232px
    border none
    margin 0 23px 0 16px
    height 50px
    font-size 14pt
    
    @media ( max-width 767px )
      margin 0 auto 23px
      display block
      width 80%
    
    
  &.i-success
    
    form
      display none
      
    .b-call-me-block__message
      display block
      line-height 48px
      font-size 16pt
    
      @media ( max-width 767px )
        font-size 18pt
        line-height 1.2
        margin 0 45px
    