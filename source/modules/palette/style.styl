@import '../../styl/component-include.styl'

.b-palette
  text-align center
  
  &-color
    display inline-block
    vertical-align top
    width 94px
    height 94px
    border-radius 51%
    margin-bottom 8px
    transition( all 0.5s ease-out )
    
    &:hover
      transform scale( 1.3, 1.3 )
    
  .row
    margin-bottom 23px
    
  p
    margin 12px 0
    
  .text-muted
    transition( color 0.5s ease )
    
  .col-sm-3:hover .text-muted
    color #000
    
  .text-large b
    font-weight 400