@import '../../styl/component-include.styl'

.b-top-menu
  line-height 68px
  font-size 11pt
  float right
  
  a
    color #000
    text-decoration none
    margin-left 40px
    white-space nowrap
    display inline-block
    vertical-align top
    
    @media( max-width 767px )
      display none
      
    &:hover
      color #0086cd

  &__icon
    display inline-block
    margin -4px 0 0 33px
    cursor pointer
    font-size 40pt
    display inline-block
    vertical-align top
    
    .cls-1
      fill #010101
      
    svg
      width 22px
      
    &:hover,
    &.i-open
    
      circle
        fill #0086cd