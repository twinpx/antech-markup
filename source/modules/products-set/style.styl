@import '../../styl/component-include.styl'

.b-products-set

  @media( min-width 768px )
    margin-bottom 20px
  
  @media( min-width 992px )
    margin-bottom 20px
  
  @media( max-width 767px )
    margin-bottom 15px

  &__body
    background-color #fff
    padding 40px 40px 120px
    height 100%
    transition( all 0.5s linear )
    position relative
    
    &:hover
      box-shadow 0 0 25px rgba( 0,0,0,.15 )
    
  &__button
    position absolute
    bottom 45px
    left 0
    width 100%
  
  h3
    color #000
    margin-top 0
    
  p
    font-size 9.5pt
    margin  5px 30px 20px

  ul
    padding-left 0
    list-style-type none
    
  li
    padding-left 30px
    background embedurl( 'img/bullit.png' ) no-repeat left 10px
    cursor default
    
    b
      font-weight 300
      
  .btn
    min-width 170px