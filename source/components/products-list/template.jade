        include ../../modules/gallery/product-list-sm
      .visible-xs-block
        include ../../modules/gallery/product-list-xs
      
    #gofro.tab-pane( div role="tabpanel" )
      .visible-md-block.visible-lg-block
        include ../../modules/gallery/product-list-md
