      a( href="#gofro" aria-controls="gofro" role="tab" data-toggle="tab" ).btn.btn-default.btn-menu
        span Гофрокартон
      a( href="#pack" aria-controls="pack" role="tab" data-toggle="tab" ).btn.btn-default.btn-menu
        span Упаковочные материалы

    //-.btn-group( role="group" )
