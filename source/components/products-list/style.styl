@import '../../styl/component-include.styl'

.b-products-list
  font-size 14pt
  
  p
    margin 6px 0
    
  .btn
    margin-top 12px
  
  img
    width 100%
  
  .nav-tabs
    border-bottom 0
    margin-bottom 30px
  
  &__nav
    text-align center
    
    @media ( max-width 767px )
      margin-right -15px
      margin-left -15px
        
    .btn-group
    
      @media ( max-width 767px )
        width 100%
    
      .btn-default
        font-size 14pt
        font-weight 200
        
        @media (max-width: 991px) and (min-width: 768px)
          font-size 12pt
          line-height 46px
          
          span
            display inline-block
            line-height 46px
            vertical-align middle
      
        @media ( max-width 767px )
          font-size 11pt
          width 33.42%
          white-space normal
          padding 0 10px
          border-radius 0
          
          span
            display inline-block
            line-height 19px
            vertical-align middle
          
  .fotorama
    padding-top 50px
    
  .fotorama__nav,
  .fotorama__stage
    overflow visible
    
  .fotorama__nav-wrap
    display none
    
  .fotorama__wrap--css3 .fotorama__arr
    top -50px
    margin 0
    transition none
    background #e5e5e5
    border-radius 42px
    width 42px
    height 42px
    text-align center
    
  .fotorama__wrap--css3 .fotorama__arr.fotorama__arr--prev
    left 50%
    margin-left -56px
    
    &:before
      content ' '
      display inline-block
      vertical-align top
      width 6px
      height 6px
      transform: rotate(45deg)
      border-bottom 1px solid #a0a0a0
      border-left 1px solid #a0a0a0
      margin-top 17px
    
  .fotorama__wrap--css3 .fotorama__arr.fotorama__arr--next
    left 50%
    margin-left 14px
    
    &:before
      content ' '
      display inline-block
      vertical-align top
      width 6px
      height 6px
      transform: rotate(45deg)
      border-top 1px solid #a0a0a0
      border-right 1px solid #a0a0a0
      margin-top 17px
      
  .fotorama__wrap--no-controls.fotorama__wrap--toggle-arrows .fotorama__arr
    opacity 1
    
  .fotorama__arr--disabled
    opacity( 0.5 !important)