@import '../../styl/component-include.styl'

.b-products-list
  font-size 14pt
  
  p
    margin 0
    line-height 38px
    
  .btn
    margin-top 12px
  
  img
    width 100%
  
  .nav-tabs
    border-bottom 0
    
  section
    padding 0
    
    &:last-of-type
      display none
      
  &__image
    display block
    background-repeat no-repeat
    background-position center
    background-size cover
  
  &__nav
    text-align center
    
    @media ( max-width 767px )
      margin-right -15px
      margin-left -15px
        
    .btn-group
    
      @media ( max-width 767px )
        width 100%
    
      .btn-default
        font-size 14pt
        font-weight 200
        min-width 238px
        padding 0 45px
        
        @media (max-width: 991px) and (min-width: 768px)
          font-size 12pt
          line-height 46px
          min-width 0
          
          span
            display inline-block
            line-height 46px
            vertical-align middle
      
        @media ( max-width 767px )
          font-size 11pt
          width 33.42%
          white-space normal
          padding 0 10px
          border-radius 0
          min-width 0
          
          span
            display inline-block
            line-height 19px
            vertical-align middle
          
  &__item
    padding 0 22px 25px
    
    img
      margin-bottom 10px
    
  &__load
    padding 36px 4px 0
    clear both
    
    i,
    b
      display block
      border 1px solid #d8d8d8
      border-radius 5px
      width 99.9%
      min-height 55px
      line-height 55px
      padding 0 20px
      font-size 12pt
      cursor pointer
      text-align center
      font-style normal
      font-weight 100
    
      &:hover
        background-color #eceaec
        border-color #eceaec
        
    b
      display none
        
    &.i-preloader
    
      i
        display none
        
      b
        display block
        background-color #f4f6f4
        border-color #f4f6f4