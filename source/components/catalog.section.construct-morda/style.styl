@import '../../styl/component-include.styl'

.construct-section-top
  position relative
  
  .btn-group-justify
    
    .btn-tabs
      background none
      font-size 14px
      border 1px solid $border-gray
      color $c-black
      font-weight 400
      border-radius 2em
      padding 10px 25px
      word-wrap normal
      white-space normal
      
      
      &.active,
      &.active:hover,
      &:active
        background-color $c-blue-m
        box-shadow none
    
      
    
    @media (max-width: 768px)
      display block
      
      .btn-tabs
        display block
        float none
        width 100%
        padding 20px 25px
        
        &:first-of-type,
        &:last-of-type
          border-radius 0
  
  .tab-content
    .a-construct-card
      padding 10px
      padding-bottom 20px
      position relative
      border 1px solid $c-white
      
      a
        color $c-dark-gray
      
      .card-name-block
        position absolute
        width 100%
        bottom 10px
        left 0
        font-size 14px
        padding 10px
        font-weight 400
        padding-left 60px
        display -webkit-flex
        display flex
        align-items center
        justify-content space-between
      
      .card-price
        margin-left 10px
      
      .card-image
        height 230px
        width 230px
        margin 0 auto
        display block
        
      .image-second
        display none
        
      &:hover
        border-color $border-gray
        
        .image-first
          display none
          
        .image-second
          display block
      
      .card-code
        background-color $c-gray-s
        border-radius 100%
        width 40px
        height 40px
        line-height 40px
        text-align center
        position absolute
        left 10px
        top 0
        bottom 0
        margin auto 0
      
    
      &.add-card
        position relative
        
        a
          color initial
        
          .card-name-block
            bottom 20%
            padding 20px
            text-align center
            text-decoration underline
            color inherit
            display block
            
  
  
  
  
  