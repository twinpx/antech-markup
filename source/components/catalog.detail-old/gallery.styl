.detail_tovar_card
    .detail_photo_slider
        width 400px
        position relative
        .prev_slides
            background url('/images/a7/prev_scroll_button_small.png') no-repeat 0px 0px
            left 0px
        .next_slides
            background url('/images/a7/next_scroll_button_small.png') no-repeat 0px 0px
            right 0px
    .detail_photo_slides_container
        height 360px
        width 360px
        margin 0 20px
    .detail_photo_slides_item
        position relative
        &:hover
            .show_more_btn
                background-position 0 -25px
    .show_more_btn
        position absolute
        bottom 5px
        right 5px
        width 33px
        height 25px
        cursor pointer
        background url('/bitrix/templates/a9_3_1/components/bitrix/catalog/.default/bitrix/catalog.element/.default/images/a8_detail_big_image_btn.png') no-repeat 0 0
    .reiting
        margin-bottom 10px
        .star_inditaor
            td
                vertical-align middle
            .star_el
                width 12px
                height 12px
                margin 0
                padding 1px
                background url(/images/a7/star_gray.jpg) no-repeat 50% 50%
    .individualSizeOrder
        margin-bottom 20px
    .preview_text
        margin-bottom 40px
        color #666
    .second_info
        td
            padding-top 1.5em
            padding-bottom 1.5em
        .info_item_name
            width 240px
            text-align right
        .info_item_value
            padding-left 60px
        .property_list
            tr
                &:first-of-type
                    td
                        border-top 1px solid #dfdfdf

.detail_tovar_card .detail_photo_slider .prev_slides, .detail_tovar_card .detail_photo_slider .next_slides
    position absolute
    z-index 5
    width 0px
    height 0px
    padding 17px 12px 0px 0px
    top 100px
    cursor pointer

.detail_tovar_card .detail_photo_slider .prev_slides:hover, .detail_tovar_card .photo_slider .next_slides:hover
    background-position 0 -17px

.detail_tovar_card .reiting .star_selector .star_selected, .detail_tovar_card .reiting .star_inditaor .star_full
    background-image url(/images/a7/star_yellow.jpg)

    .detail_tovar_card
        .second_info
            .property_list
                td
                    padding 0.5em
                    border-bottom 1px solid #dfdfdf

.pro_review_block
    background-color #fff
    padding 30px
    #     border-top 1px solid #e8e8e8
    margin-top 5px
    position relative
    &.add_more_rev_btn
        margin-bottom 20px
    .pro_review_tab_selector
        padding-bottom 10px
    .more_reviews_btn
        text-align center
        .link_button_view
            position absolute
            bottom -17px
    .review_item
        padding 10px 0
    .review_name
        margin-bottom 10px
    .review_name_raiting
        display inline
        float left
        margin-right 5px
    .review_name_user_anme
        margin-right 5px
    .review_name_date
        color #aaa7b2