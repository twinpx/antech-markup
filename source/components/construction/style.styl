@import '../../styl/component-include.styl'

.a-construct
  .card-grid
    .a-construct-indes-card
      padding 10px
      margin 15px 0
      position relative
      border 1px solid $c-white
      box-shadow 0 3px 5px $light-grey
      height 270px
      
      &:hover
        box-shadow 0 6px 8px $light-grey
        
      .card-name-block
        text-align center
        position absolute
        bottom 20px
        left 0
        right 0
        margin 0 auto
      a
        color $c-dark-gray
  
  .catalog-preim-container
    
    .catalog-preim-item
      background-repeat no-repeat
      background-position left center
      background-size 48px 48px
      font-weight 600
      font-size 14px
      padding-left 70px
      min-height 60px
      display -webkit-flex
      display flex
      justify-content flex-start
      align-items center
      
  @media ( min-width 768px )
    .catalog-preim-container
      display -webkit-flex
      display flex
      justify-content space-between
      align-items center

      .catalog-preim-item
        margin 10px 0
        width 25%
    
    
    
            
    
      
        
        