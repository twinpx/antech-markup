@import '../../styl/component-include.styl'

.b-request-form
  position relative
  
  &__form
    transition( opacity 0.5s ease )
    visibility visible
    z-index 2
    
  &__success
    visibility hidden
    width 100%
    padding-top 200px
    position absolute
    top 0
    left 0
    transition( opacity 1.5s ease )
    opacity 0
    z-index 1
  
  &__error
    visibility hidden
    width 100%
    padding-top 250px
    position absolute
    top 0
    left 0
    transition( opacity 1.5s ease )
    opacity 0
    z-index 1
      
  &.i-error
    .b-request-form__form
      opacity 0
      visibility hidden
      z-index 1
      
    .b-request-form__error
      visibility visible
      opacity 1
      z-index 3
      
  &.i-success
    .b-request-form__form
      opacity 0
      z-index 1
      
    .b-request-form__success
      visibility visible
      opacity 1
      z-index 3

  form
    width 320px
    margin 0 auto
    text-align center
    
    @media ( max-width 767px )
      width 100%
    
    .text-large
      font-weight 300
      
      b
        font-size 17pt
        color #000
        font-weight 400
        
    input.form-control
      width 273px
      display inline-block

  input.form-control[ type="tel" ]
    box-shadow none
    height 74px
    border-radius 3px
    border 1px solid #a2a2a2
    color #000
    font-size 17pt
    padding-left 25px
    padding-right 25px
    
    &:focus
      outline none
      border-color #a2a2a2 !important