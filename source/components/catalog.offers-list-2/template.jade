link( rel="stylesheet", href="/components/catalog.offers-list-2/style.css" )
script( src="/components/catalog.offers-list-2/script.js" )
link( href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet" )
script( src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js" )


.row( id="offersItems-block")
  .col-xs-12
    .h3.offers-block-title Готовые решения в наличии (срок поставки 1 день)
    .offers-block( id="offersItems" role="tablist" aria-multiselectable="true")
    
      .offers-header.bg-gray-xs
        
        .header-cell.item-cell-articul Арт
        .header-cell.item-cell-size Размеры,<br>(Д) х (Ш) х (В) мм
        .header-cell.item-cell-material Картон
        .header-cell.item-cell-price Цена/шт при тираже, руб
        .header-cell.item-cell-instock Наличие
        .header-cell.item-cell-print Печать
          .help_icon_round.popover_teaser( data-container="body" data-toggle="popover" data-placement="bottom" data-trigger="hover" data-content="Есть возможность нанести печать на готовые коробки." ) ?
        .header-cell.item-cell-quantity-and-button
          div Количество<br>
            span.text-red *
            span.text-help &nbsp;продается в пачках
      
      - for (var i=0; i < 5; i++)
        
        
        .panel.panel-offers
          .panel-heading( role="tab" id="heading#{i}" )
            a.collapsed( role="button" data-toggle="collapse" data-parent="#offersItems" href="#collapse#{i}" aria-expanded="true" aria-controls="collapse#{i}")
              img.sales-icon(src="/img/svg/sale.svg" alt="Спеццена" data-container="body" data-toggle="popover" data-placement="top" data-trigger="hover" data-content="Действует специальная сниженная цена" )
              span 750 х 500 х 500 Т-24B Бел/Бур
              span.glyphicon.glyphicon-chevron-down( aria-hidden="true")
              span.glyphicon.glyphicon-chevron-up( aria-hidden="true")
            
            
        .panel-collapse.collapse( id="collapse#{i}" role="tabpanel" aria-labelledby="heading#{i}")
          .panel-body
          
            form.offers_item_add2cart.mode-standart(name="add_to_cart_offers_id_#{i}" method="POST" action="/json/add2cart.json")
            
              .item-cell.item-cell-articul
                .item-cell-name Артикул
                .item-cell-val &nbsp;MSB0200
                img.sales-icon.popover_teaser(src="/img/svg/sale.svg" alt="Спеццена" data-container="body" data-toggle="popover" data-placement="top" data-trigger="hover" data-content="Действует специальная сниженная цена" )
                a.glyphicon.glyphicon-camera.popover_preview_image( href="" data-previewimage="http://s.fotorama.io/3.jpg" data-content="<img src='http://s.fotorama.io/3.jpg' width='200' height='200' />")
              
              .item-cell.item-cell-size
                .item-cell-name Размеры,<br>Д х Ш х В<br>(мм)
                .item-cell-val
                  .name1line
                    a.underline(href="") 1250 х 1000 х 1500
                  .name2line внешние
              
              
              .item-cell.item-cell-material
                .item-cell-name Картон
                .item-cell-val Т-24B Бел/Бур
              
              
              .item-cell.item-cell-price
                .item-cell-name Цена/шт при тираже
                .item-cell-val.standart-price
                  .item-cell-row
                    .item-cell-price-td.price-range-1
                      .quantity-step-name
                        span до&nbsp;500&nbsp;шт
                      .bold-l 2&nbsp;099,73
                        span &nbsp;р.
                      .quantity-select-indikator
                    
                    .item-cell-price-td.price-range-2
                      .quantity-step-name 
                        span до&nbsp;1000&nbsp;шт
                      .bold-l 2&nbsp;099,73
                        span &nbsp;р.
                      .quantity-select-indikator
                    
                    .item-cell-price-td.price-range-3
                      .quantity-step-name >1000&nbsp;шт
                      .bold-l 2&nbsp;099,73
                        span &nbsp;р.
                      .quantity-select-indikator
                  
                .item-cell-val.order-price Цена будет рассчитана после оформления предзаказа
              
              
              .item-cell.item-cell-instock
                .item-cell-name В&nbsp;наличии
                .item-cell-val
                  .preorder_popower( data-container="body" data-toggle="popover" data-placement="top" data-trigger="manual" data-content="В данный момент на складе 100 единиц товара. Сделайте предзаказ и мы изготовим нужное количество." ) 98&nbsp;765 шт
              
              
              
              .clear-fix.visible-xs
              
              .item-cell.item-cell-print
                .checkbox
                  label
                    input.add-pring-chb( type="checkbox" name="addprint" data-defaultval="N")
                    span.visible-xs Печать
                    
              .item-cell.item-cell-quantity
                  
                input( type="hidden" name="OFFERS_ID" value="123123" )
                input( type="hidden" name="MODE" value="ADD>")
                input( type="hidden" name="BID" value="2345678" )
              
              
                
                input.form-control.add-to-cart-input-quantity(name="quantity" size="4" data-container="body" data-toggle="popover" data-placement="top" data-trigger="manual" data-content="Товар продается кратно 20 шт." type="text" data-inputtype="number" data-inputstep="20" data-inputmin="" data-inputmax="" value="" data-oncart="" data-freequantity="100" data-quantityrangeone="1" data-quantityrangetwo="500" data-quantityrangetre="1000" placeholder="по 10 шт")
              
              .item-cell.item-cell-button
                button(name="submit" type="submit" value="Y" ).btn.add-to-order-btn.mode-cart Добавить<br>к заказу
              
              .clear-fix.visible-xs
              .item-cell.item-cell-morelink
                a(href="") Посмотреть фото и характеристики
          
          
         
