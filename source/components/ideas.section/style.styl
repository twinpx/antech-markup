@import '../../styl/component-include.styl'

.b-ideas-section
  
  h2
    
    .b-h-sup
      font-size 9.5pt
      margin 0 0 0 12px
      display inline-block
      vertical-align top
      color #585858
    
.b-ideas

  &-card
    background-color #fff
    padding 25px 25px 70px
    position relative
    font-size 18px
    font-weight 300
    height 466px
    border 1px solid #e3e3e3
    margin-bottom 30px
      
    &__img
      display block
      padding-top 67.7%
      background-repeat no-repeat
      background-position center
      background-size cover
      
    h3
      margin-top 14px
      max-height 90px
      overflow hidden
      line-height 1.25
      font-size 24px
      
    p
      color #666666
      margin 11px 0
      max-height 100px
      overflow hidden
      
    &__bottom
      position absolute
      bottom 25px
      left 0
      width 100%
      padding 0 25px
      
      a
        color #3f9fc0
        float left
      
      span
        float right
        
      &:after
        content ''
        clear both